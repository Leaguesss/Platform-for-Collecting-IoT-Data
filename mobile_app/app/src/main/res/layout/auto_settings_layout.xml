<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5C61">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Settings Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F8F8F8"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

            <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatic Settings (recommended)"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FAF3F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Enabling your settings to be automatically set by the application will give you the greatest chance at receiving rewards. The automatically selected settings have been optimised in such a way that it will provide users with the highest chance of being selected in researcher studies. It does this by selecting the settings which are most commonly queried by researchers on the web application. The more researchers your data reaches, the more rewards for you! "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FAF3F3"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:buttonTint="#9C9B9B" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Manual Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FAF3F3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="193dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="372dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Selecting your settings manually will give you the freedom to pick and choose the frequency with which your data is collected. This setting is recommended for users who are aiming to conserve battery life on their device or for those who are simply looking to decide themselves what settings they would like. Note that selecting settings outside of the recommended settings may mean that you receive less rewards for your data. "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FAF3F3"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:buttonTint="#9C9B9B" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>